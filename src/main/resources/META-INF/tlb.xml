<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="TL-B Generator" displayType="BALLOON"/>
        <fileType name="TypeLanguage-Binary"
                  implementationClass="org.ton.intellij.tlb.TlbFileType"
                  fieldName="INSTANCE"
                  language="TypeLanguage-Binary"
                  extensions="tlb"/>
        <lang.parserDefinition language="TypeLanguage-Binary"
                               implementationClass="org.ton.intellij.tlb.ide.TlbParserDefinition"/>
        <lang.syntaxHighlighterFactory language="TypeLanguage-Binary"
                                       implementationClass="org.ton.intellij.tlb.ide.TlbSyntaxHighlighterFactory"/>
        <annotator language="TypeLanguage-Binary" implementationClass="org.ton.intellij.tlb.ide.TlbAnnotator"/>
        <colorSettingsPage implementation="org.ton.intellij.tlb.ide.TlbColorSettingsPage"/>
        <lang.commenter language="TypeLanguage-Binary"
                        implementationClass="org.ton.intellij.tlb.ide.TlbCommenter"/>
        <lang.braceMatcher language="TypeLanguage-Binary"
                           implementationClass="org.ton.intellij.tlb.ide.TlbBraceMatcher"/>
        <lang.findUsagesProvider language="TypeLanguage-Binary"
                                 implementationClass="org.ton.intellij.tlb.ide.TlbFindUsagesProvider"/>
        <lang.refactoringSupport language="TypeLanguage-Binary"
                                 implementationClass="org.ton.intellij.tlb.ide.refactoring.TlbRefactoringSupportProvider"/>
        <lang.namesValidator language="TypeLanguage-Binary"
                             implementationClass="org.ton.intellij.tlb.ide.refactoring.TlbNamesValidator"/>
        <renameInputValidator implementation="org.ton.intellij.tlb.ide.refactoring.TlbRenameInputValidator"/>

        <stubIndex implementation="org.ton.intellij.tlb.stub.index.TlbNamedElementIndex"/>
        <stubElementTypeHolder class="org.ton.intellij.tlb.psi.TlbElementTypes" externalIdPrefix="tlb."/>
    </extensions>
    <actions>
        <group id="ton.file.group.tlb">
            <action id="ton.tlb.GenerateFuncTlb" class="org.ton.intellij.tlb.ide.actions.GenerateFuncTlbAction"
                    text="Generate FunC TL-B Parser">
                <keyboard-shortcut first-keystroke="control shift G" keymap="$default"/>
            </action>
            <add-to-group group-id="ToolsMenu" anchor="before" relative-to-action="ExternalToolsGroup"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </group>
    </actions>
</idea-plugin>
